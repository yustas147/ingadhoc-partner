<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_partner_social_form1" model="ir.ui.view">
            <field name="name">res.partner.social.inherit1</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="website" position="after">
                    <group col="3" colspan="2">     
                        <field name="facebook"/>
                        <button name="goto_facebook" string="Go" type="object" attrs="{'invisible':[('facebook', '=', False)]}"/>
                        <field name="twitter"/>
                        <button name="goto_twitter" string="Go" type="object" attrs="{'invisible':[('twitter', '=', False)]}"/>
                        <field name="linkedin"/>
                        <button name="goto_linkedin" string="Go" type="object" attrs="{'invisible':[('linkedin', '=', False)]}"/>
                        <field name="i502"/>
                        <button name="goto_i502" string="Go" type="object" attrs="{'invisible':[('i502', '=', False)]}"/>
                        <field name="instagram"/>
                        <button name="goto_instagram" string="Go" type="object" attrs="{'invisible':[('instagram', '=', False)]}"/>
                    </group>    
                </field>    
                <field name="email" position="after">
                    <field name="skype"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
